insert into UserProfile(  
                Username ,
                Loginname ,
                PasswordHash ,
                HashSalt ,
                CurrentGameId ,
                Wins,
                Losses)
SELECT 'User1', 'User1', '123', '123', null, 0, 0 from dual
union all
SELECT 'User2', 'User2', '123', '123', null, 0, 0 from dual;

insert into GameInstance(
    Player1,
    CurrentPlayerTurn
)
select 'User1', 'User1' from dual;

insert into GameState(
    GameId , 
    BoardRow ,
    BoardCol ,
    OwnedBy 
)
select MAX(GameId), 
    'A',
    '1',
    'User1'
from GameInstance;

insert into GameLog(
    GameId , 
    Player ,
    MovePlayed 
)
select MAX(GameId),
'User1',
'A1'
from GameInstance;

